# Auto detect text files and perform LF normalization
* text=auto

# Explicitly declare text files you want to always be LF
*.cs text eol=lf
*.css text eol=lf
*.html text eol=lf
*.js text eol=lf
*.json text eol=lf
*.md text eol=lf
*.py text eol=lf
*.rs text eol=lf
*.toml text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.sh text eol=lf
.gitignore text eol=lf
.gitattributes text eol=lf

# Declare files that will always have CRLF line endings on checkout
# *.bat text eol=crlf

# Denote all files that are truly binary and should not be modified
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.sl2 binary
*.exe binary
*.dll binary
*.pdb binary
*.lockb binary